{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": [
      "reflect-metadata"
    ],
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include":[
    "src/**/*"
  ],
  "exclude":[
    "node_modules",
    "dist"
  ]
}
